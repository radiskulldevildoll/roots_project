# Django Settings
# ===============
# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here

# Set to False in production
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO

# Database Configuration
# ======================
# PostgreSQL example:
# DATABASE_URL=postgres://user:password@localhost:5432/roots_db

# MySQL example:
# DATABASE_URL=mysql://user:password@localhost:3306/roots_db

# Leave empty to use SQLite (development only)
DATABASE_URL=

# CORS Configuration
# ==================
# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://yourdomain.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# SSL/Security (Production)
# =========================
# Set to True to redirect HTTP to HTTPS
SECURE_SSL_REDIRECT=False

# Email Configuration (Optional)
# ==============================
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
